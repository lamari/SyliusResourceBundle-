<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>{% block sylius_title %}Sylius bundles example layout{% endblock %}</title>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block sylius_stylesheets %}
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap.no-icons.min.css" />
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome.css" />
        <style type="text/css">
            body {
                padding-top: 60px;
            }
        </style>
    {% endblock %}
</head>
<body>
<div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href="{{ path('homepage') }}">Sylius</a>
            <ul class="nav">
                <li><a href="#" data-toggle="modal" data-target="#myModal">Open API </a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <ol class="breadcrumb">
        <li><a href="{{ path('html_book_index') }}">Back to Collection</a></li>
    </ol>

    {% for type in ['success', 'error'] %}
        {% for message in app.session.flashbag.get(type) %}
            <div class="alert alert-{{ type }}">
                {{ message }}
                <a class="close" data-dismiss="alert" href="#">&times;</a>
            </div>
        {% endfor %}
    {% endfor %}

    {% block content %}
    {% endblock %}
    <hr>
    <footer>
        <p>&copy; <a href="http://Sylius.org">Sylius.org</a>, 2011 - {{ 'now'|date('Y') }}.</p>
    </footer>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">API Demo</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <div class="span6">
                        <h3>Request</h3>
                        <form id="demo">
                            <input id="baseurl" type="hidden" value="{{ path("homepage") }}">
                            <div class="form-group">
                                <label for="id">Method</label>
                                <select name="_method" id="_method">
                                    <option value="GET" data-json="">GET</option>
                                    <option value="POST" data-json='{"title":"title","author":"author","description":"description"}'>POST</option>
                                    <option value="PATCH" data-json='{"id":1,"title": "title"}'>PUT</option>
                                    <option value="PUT" data-json='{"id":1,"title": "title","author":"author","description":"description"}'>PATCH</option>
                                    <option value="DELETE" data-json='{"id":1,"title": "title","author":"author","description":"description"}'>DELETE</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <textarea id="content" name="content"></textarea>
                            </div>
                            <div class="block-id hide form-group">
                                <label for="id">ID</label>
                                <input id="id" name="id" class="form-text " />
                            </div>
                            <div class="form-group">
                                <button type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                    <div class="span6 hide block-response">
                        <div>
                            <h3>Response</h3>
                            <h5>URL: <span id="response"></span></h5>
                        </div>
                        <div>
                            <h5>Status: <span id="status"></span></h5>
                        </div>
                        <div>
                            <h5>Preview</h5>
                            <textarea id="preview"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


{% block sylius_javascripts %}
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.0.min.js"></script>
    <script type="text/javascript" src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="{{ asset("bundles/app/js/script.js") }}"></script>
{% endblock %}

</body>
</html>
